// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  TEACHER
  STUDENT
}

enum ResourceType {
  WORKSHEET
  LESSON
  EXERCISE
  QUIZ
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum ResourceSkill {
  GRAMMAR
  VOCABULARY
  READING
  WRITING
  SPEAKING
  LISTENING
  TESTS
  REFERENCE
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String
  password          String
  role              UserRole
  avatar            String?   // Avatar: image URL or emoji string
  resetToken        String?   // Token for password reset
  resetTokenExpiry  DateTime? // Expiry time for reset token
  lastSeenAt        DateTime? // Last time the user logged in
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Teacher relationships
  createdResources Resource[] @relation("ResourceCreator")
  createdCourses   Course[]    @relation("CourseCreator")
  
  // Student relationships
  enrollments     Enrollment[]
  progress        Progress[]
  documents       StudentDocument[]
}

model Resource {
  id            String       @id @default(cuid())
  title         String
  description   String?
  type          ResourceType
  content       String       // JSON or HTML content for the worksheet
  estimatedHours Float       // Estimated time to complete in hours
  level          String       // CEFR level: A1, A2, B1, B2, C1, C2 (required)
  skill          ResourceSkill // Skill category: grammar, vocabulary, reading, writing, speaking, listening, tests (required)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  creatorId     String
  creator       User         @relation("ResourceCreator", fields: [creatorId], references: [id])
  
  assignments   Assignment[]
}

model Course {
  id            String    @id @default(cuid())
  name          String
  duration      Int       // 15, 30, 45, or 60 hours
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  creatorId     String
  creator       User      @relation("CourseCreator", fields: [creatorId], references: [id])
  
  enrollments   Enrollment[]
}

model Enrollment {
  id            String    @id @default(cuid())
  studentId     String
  courseId      String
  enrolledAt    DateTime  @default(now())
  
  student       User      @relation(fields: [studentId], references: [id])
  course        Course    @relation(fields: [courseId], references: [id])
  
  assignments   Assignment[]
  courseNote    CourseNote?
  
  @@unique([studentId, courseId])
}

model Assignment {
  id            String    @id @default(cuid())
  enrollmentId  String
  resourceId    String
  assignedAt    DateTime  @default(now())
  dueDate       DateTime?
  order         Int       // Order in which resources should be completed
  
  enrollment    Enrollment @relation(fields: [enrollmentId], references: [id])
  resource      Resource   @relation(fields: [resourceId], references: [id])
  
  progress      Progress[]
  
  @@unique([enrollmentId, resourceId])
}

model Progress {
  id            String         @id @default(cuid())
  assignmentId  String
  studentId     String
  status        ProgressStatus @default(NOT_STARTED)
  completedAt   DateTime?
  score         Float?
  notes         String?        // Student's work/answers
  timeSpent     Float?         // Time spent in hours
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  assignment    Assignment     @relation(fields: [assignmentId], references: [id])
  student       User           @relation(fields: [studentId], references: [id])
  
  @@unique([assignmentId, studentId])
}

model CourseNote {
  id            String    @id @default(cuid())
  enrollmentId  String    // One note per enrollment (course per student)
  content       String    // Rich text content (HTML)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  enrollment    Enrollment @relation(fields: [enrollmentId], references: [id])
  
  @@unique([enrollmentId])
}

model StudentDocument {
  id            String    @id @default(cuid())
  studentId     String
  title         String    // Document title (e.g., "Signed Contract", "Terms and Conditions")
  fileName      String    // Original filename
  fileUrl       String    // URL to the file in storage (Supabase Storage)
  fileSize      Int?      // File size in bytes
  mimeType      String?   // MIME type (e.g., "application/pdf", "image/png")
  uploadedBy   String    // Teacher ID who uploaded the document
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  student       User      @relation(fields: [studentId], references: [id])
  
  @@index([studentId])
}
